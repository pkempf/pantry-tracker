{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/recipeNew.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "instructions": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000
    },
    "category": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "area": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    }
  },
  "additionalProperties": false,
  "required": ["name", "instructions"]
}
